/*
 * This is a minimal example, see extra-examples.cpp for a version
 * with more explantory documentation, example routines, how to 
 * hook up your pixels and all of the pixel types that are supported.
 *
 */

#include "application.h"
#include "neopixel.h"

SYSTEM_MODE(AUTOMATIC);

// IMPORTANT: Set pixel COUNT, PIN and TYPE
#define PIXEL_PIN D2
#define PIXEL_COUNT 23
#define PIXEL_TYPE WS2812B


Adafruit_NeoPixel strip = Adafruit_NeoPixel(PIXEL_COUNT, PIXEL_PIN, PIXEL_TYPE);

int led1;

int ledState();

void setup(){
    
    strip.begin();
    strip.show();
    Particle.function("led",ledState);
   
}

void loop()
{
}

int ledState(String command){
    led1 = command.toInt();
     while (led1==0){
        colorAll(strip.Color(0,0,0), 50);
    }
    while (led1==1){
        theaterChaseRainbow(25);
        colorAll(strip.Color(255, 255, 30), 50);
        delay(150000);
    }
    
    while (led1==2){
       colorAll(strip.Color(255, 255, 255), 50);
    }


    while (led1==3) {
            colorAll(strip.Color(255,0,0), 50);
            
        }  
    while (led1==4) {
            colorAll(strip.Color(0,128,0), 50);
            
        }  
    while (led1==5) {
            colorAll(strip.Color(0,0,255), 50);
            
        } 
    while (led1==6) {
            colorAll(strip.Color(75,30,128), 50);
            
        }
    while (led1==7) {
        theaterChaseRainbow(100);
            
        }
        if (led1 > 7){
            return -1;
        }
        else if (led1 < 0){
            return -1;
        }
    
    }   
  
  
void colorAll(uint32_t c, uint8_t wait) {
  uint16_t i;
  
  for(i=0; i<strip.numPixels(); i++) {
    strip.setPixelColor(i, c);
  }
  strip.show();
  delay(wait);
}

void theaterChaseRainbow(uint8_t wait) {
  for (int j=0; j < 256; j++) {     // cycle all 256 colors in the wheel
    for (int q=0; q < 3; q++) {
      for (int i=0; i < strip.numPixels(); i=i+3) {
        strip.setPixelColor(i+q, Wheel( (i+j) % 255));    //turn every third pixel on
      }
      strip.show();

      delay(wait);

      for (int i=0; i < strip.numPixels(); i=i+3) {
        strip.setPixelColor(i+q, 0);        //turn every third pixel off
      }
    }
  }
}

uint32_t Wheel(byte WheelPos) {
  WheelPos = 255 - WheelPos;
  if(WheelPos < 85) {
    return strip.Color(255 - WheelPos * 3, 0, WheelPos * 3);
  }
  if(WheelPos < 170) {
    WheelPos -= 85;
    return strip.Color(0, WheelPos * 3, 255 - WheelPos * 3);
  }
  WheelPos -= 170;
  return strip.Color(WheelPos * 3, 255 - WheelPos * 3, 0);
}
// Input a value 0 to 255 to get a color value.
// The colours are a transition r - g - b - back to r.

